<% if signed_in? %>
    <div class="row">
        <aside class='col-md-4'>
            <section>
                <%= render 'shared/user_info' %>
            </section>
            <section>
                <%= render 'shared/review_form' %>
            </section>
        </aside>
        <div class="col-md-8">
            <h3>Review Feed</h3>
            <%= render 'shared/feed' %>
        </div>
    </div>
<% else %>
    <div class="center jumbotron">
        <h1>Movie SNS (仮)</h1>
        <h2>自分の好きな映画から繋がるSNSです。</h2>
        <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-lg btn-primary" %>
    </div>
<% end %>

